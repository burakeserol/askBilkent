extends layout

block content
	form(class="form-horizontal")
		div(class="form-group")
			label(for="questionTitle") Subject
			input(type="text" class="form-control" id="questionTitle" )
		div(class="form-group")
			label(for="question") Question
			textarea(class="form-control" rows="6")
		div(class = "row")
			div(class="col-md-6 ask-col")
				button(type="submit" class="btn btn-success ask-button") Ask Question
				button(type="submit" class="btn btn-default") Cancel
			div(class="col-md-3")
			div(class="col-md-3 ask-col")
				input(type="search" class="form-control" id="addTag" placeholder="Add Tag")
			